---
import { Image } from "astro:assets";

interface Props {
  title: string;
  image: ImageMetadata;
  tags: string[];
  link: string;
}

const { title, image, tags, link } = Astro.props as Props;
---

<div id="work-card" class="h-auto md:h-87.5">
    <a href={link} class="relative block group" target="_blank">
        <Image
            src={image}
            alt={title}
            aria-label={title}
            class="rounded-4xl mb-4 h-75 object-cover"
            loading="lazy"
        />

        <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-all duration-500 rounded-4xl">
            <div class="text-2xl font-bold text-white flex flex-col items-center justify-center h-full">
                <h3>{title}</h3>
            </div>
        </div>
    </a>

    {tags.map((tag) => (
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-[10px] font-bold text-gray-700 mr-2 mb-2 font-[Manrope]">
            {tag}
        </span>
    ))}
</div>